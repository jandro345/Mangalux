<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Aquí defino el estilo que tendrán los botones. -->
    <style name="botones">    <!-- Nombro el estilo que estoy definiendo -->
        <item name="android:layout_width">@dimen/largo</item> <!-- Le pongo una anchura ya definida en dimens que es de tipo size -->
        <item name="android:layout_height">@dimen/largo</item> <!-- Le pongo una altura ya definida en dimens que es de tipo size -->
        <item name="android:scaleType">fitCenter</item> <!-- Lo ajusto al centro -->

    </style>
    <!-- Aquí defino el estilo de espaciado -->
    <style name="espaciado"> <!-- Nombro el estilo que estoy definiendo -->
        <item name="android:layout_width">30dp</item> <!--Le pongo una anchura al estilo que estoy creando -->
        <item name="android:layout_height">1dp</item> <!--Le pongo una altura al estilo que estoy creando -->
    </style>

</resources>
